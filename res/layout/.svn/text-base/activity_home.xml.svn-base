<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity" >
	
    <!-- 搜索框 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@drawable/search_bg">       
   <!--  style="@style/search_edittext_style"  -->
	    <EditText
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="6dp"
	        android:layout_marginBottom="2dp"
	        android:id="@+id/keyword"
	        android:hint="@string/search_hint"
	        android:maxLength="8"
	        android:inputType="text" />
	    
	    <!-- <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_alignParentRight="true"
	        android:id="@+id/searchButton"
	        android:text="@string/search" /> -->

	</RelativeLayout>
	
    <!-- 广告页卡 -->
    <FrameLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="200dip">
	    
	    <android.support.v4.view.ViewPager
	        android:id="@+id/homeAdViewPager"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center">
	        
	    </android.support.v4.view.ViewPager>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        
	        android:layout_marginBottom="3dip"
	        android:layout_marginRight="3dip">
	        <View 
	            android:id="@+id/dot_0"	
	            android:layout_width="5dip"
	            android:layout_height="5dip"
	            android:layout_marginLeft="2dip"
	            android:layout_marginRight="2dip"
	            android:background="@drawable/dot_focused"/>
	        <View 
	            android:id="@+id/dot_1"	
	            android:layout_width="5dip"
	            android:layout_height="5dip"
	            android:layout_marginLeft="2dip"
	            android:layout_marginRight="2dip"
	            android:background="@drawable/dot_normal"/>
            <View 
	            android:id="@+id/dot_2"	
	            android:layout_width="5dip"
	            android:layout_height="5dip"
	            android:layout_marginLeft="2dip"
	            android:layout_marginRight="2dip"
	            android:background="@drawable/dot_normal"/>    
	    </LinearLayout>
    </FrameLayout>
    
    <!-- 分类&专题导航 -->
	<LinearLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <LinearLayout
	        android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">

	        <Button
	            android:id="@+id/navigationButton1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/navigationButtonText1" />
	        <Button
	            android:id="@+id/navigationButton2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/navigationButtonText1" />
	        <Button
	            android:id="@+id/navigationButton3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/navigationButtonText1" />

	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">

        		<Button
	            android:id="@+id/navigationButton4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/navigationButtonText1" />
        		<Button
	            android:id="@+id/navigationButton5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/navigationButtonText1" />
        		<Button
	            android:id="@+id/navigationButton6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/navigationButtonText1" />

        		
	    </LinearLayout>
	</LinearLayout>
	
	<!-- 底部导航 -->
</LinearLayout>