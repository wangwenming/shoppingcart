<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_product_url"
        android:visibility="invisible"/>
    
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/list_product_image"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_product_image"
        android:id="@+id/list_product_name"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/list_product_name"
        android:layout_toRightOf="@id/list_product_image"
        android:id="@+id/list_product_info"
        android:textSize="12sp"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_product_info" 
        android:layout_toRightOf="@id/list_product_image"
        android:id="@+id/list_product_price"
        android:textColor="#FF0000"
        android:layout_marginTop="2dp"/>

</RelativeLayout>